{
  "workbench.colorCustomizations": {
    // Title bar
    "titleBar.activeForeground": "#000",
    "titleBar.activeBackground": "#0D74CE",

    // Side bar
    "activityBar.background": "#0D74CE",
    "activityBar.activeBackground": "#113264",
    
    // Side bar icons
    "activityBar.foreground": "#ACD8FC",
    "activityBar.inactiveForeground": "#113264",
  },
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "eslint.validate": [ "javascript", "html" ],
  "terminal.integrated.defaultProfile.windows": "Git Bash",
}
